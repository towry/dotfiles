{
  "rules": {
    "no-console": 0,
    "space-before-function-paren": 0,
    "comma-dangle": 0,
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-unused-vars": [2, 
      {
      "args": "after-used", 
      "argsIgnorePattern": "^React|angular",
      "vars": "all",
      "varsIgnorePattern": "^React|angular"
      }
    ]
  },
  "plugins": [
	"react"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "amd": true,
    "mocha": true,
    "jasmine": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "modules": true,
    "spread": true,
	"classes": true
  },
  "globals": {
    "react": true,
    "React": true,
    "jquery": true,
    "$": true,
    "angular": true,
    "d3": true,
	"Vue": true
  },
  "parserOptions": {
    "sourceType": "module",
	"ecmaFeatures": {
	  "jsx": true
	}
  }
}
