// 将设置放入此文件中以覆盖默认设置
{
// editor config
    "editor.fontFamily": "Input, Monaco, Menlo, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.insertSpaces": false,
    "editor.rulers": [80],
	"editor.renderWhitespace": "all",
    "editor.renderIndentGuides": false,
    "editor.folding": true,
	"editor.selectionHighlight": true,

// projects
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
		"**/*.pyc": true,
        "**/.webpack_cache": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/build": true,
		"**/dest": true,
        "**/.webpack_cache": true,
        "**/temp": true,
        "**/docs/qxfe": true
    },

// other
	"window.titleBarStyle": "native",
	"files.trimTrailingWhitespace": true,
	"vsicons.projectDetection.autoReload": true,
	"workbench.welcome.enabled": false,
	"vsicons.dontShowNewVersionMessage": true,
	"files.associations": {
        "*.vue": "vue"
    },
    "workbench.iconTheme": "vs-seti",

    "workbench.activityBar.visible": true,
    "typescript.check.tscVersion": false,
    "markdown-pdf.outputDirectory": "/Users/towry/Downloads",
    "editor.cursorStyle": "line",
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": true,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "explorer.enableDragAndDrop": false,
    "search.useIgnoreFilesByDefault": true,
    "workbench.colorTheme": "Visual Gruvbox (Medium Dark)",
    "vim.insertModeKeyBindings": [
        {
            "before": [",", ","],
            "after": ["<Esc>"]
        }
    ],
    "editor.lineNumbers": "relative",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.quickSuggestionsDelay": 20,
    "files.insertFinalNewline": true,
    "vim.disableAnnoyingNeovimMessage": true,
    "extensions.autoUpdate": true,
    "vim.disableAnnoyingGcMessage": true
}
