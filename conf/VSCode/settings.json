// 将设置放入此文件中以覆盖默认设置
{
// editor config
    "editor.fontFamily": "Monaco, Menlo, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "editor.rulers": [80],
	"editor.renderWhitespace": "all",
    "editor.renderIndentGuides": false,
    "editor.folding": true,
	"editor.selectionHighlight": true,

// projects
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
		"**/*.pyc": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/build": true,
		"**/dest": true,
        "**/temp": true,
        "**/docs/qxfe": true,
        "**/.fscache/**": true
    },

// other
	"window.titleBarStyle": "native",
    "files.trimTrailingWhitespace": true,
	"vsicons.projectDetection.autoReload": true,
	"vsicons.dontShowNewVersionMessage": true,
    "files.associations": {
        "*.swift.gyb": "swift",
        "*.wxss": "css"
    },
    "workbench.activityBar.visible": true,
    "typescript.check.tscVersion": false,
    "markdown-pdf.outputDirectory": "/Users/towry/Downloads",
    "editor.cursorStyle": "line",
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    "window.title": "${activeEditorLong} - ${rootName}",
    "explorer.enableDragAndDrop": false,
    "search.useIgnoreFilesByDefault": true,
    "editor.lineNumbers": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.quickSuggestionsDelay": 20,
    "files.insertFinalNewline": true,
    "extensions.autoUpdate": true,
    "workbench.sideBar.location": "left",
    "editor.lineHeight": 20,
    "editor.roundedSelection": false,
    "editor.find.seedSearchStringFromSelection": false,
    "editor.cursorBlinking": "smooth",
    "editor.hideCursorInOverviewRuler": true,
    "editor.dragAndDrop": false,
    "editor.accessibilitySupport": "off",
    "workbench.editor.showTabs": true,
    "workbench.editor.showIcons": true,
    "workbench.editor.enablePreview": false,
    "window.nativeTabs": true,
    "explorer.openEditors.visible": 0,
    "explorer.openEditors.dynamicHeight": true,
    "workbench.editor.openPositioning": "right",
    "swiftlint.enable": true,
    // vim settings
    "vim.leader": "\\",
    "vim.startInInsertMode": true,
    "vim.statusBarColorControl": true,
    "vim.enableNeovim": true,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.timeout": 300,
    "vim.insertModeKeyBindings": [
        {
            "before": [",", ","],
            "after": ["<Esc>"]
        }
    ],
    "vim.statusBarColors" : {
        "normal": "#005f5f",
        "insert": "#14884C"
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "vim.useCtrlKeys": true,
    "extensions.ignoreRecommendations": false,
    "workbench.colorTheme": "Gruvbox Dark (Soft)",
    "editor.trimAutoWhitespace": true,
    "editor.tabSize": 2,
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.quickSuggestions": false
    },
    "vetur.validation.template": false,
    "vetur.validation.style": false,
    "workbench.startupEditor": "none",
    "editor.detectIndentation": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.fscache/**": true
    }
}
